<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  >
    <Style x:Key="xStyle.Stryker.Border.Title"
           TargetType="Border">
        <Setter Property="Padding"
                Value="16" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="CornerRadius"
                Value="2 2 0 0 " />
        <Setter Property="BorderBrush"
                Value="{DynamicResource xColor.Stryker.Border.BorderBrush}" />
        <Setter Property="Background"
                Value="{DynamicResource xColor.Stryker.Border.Title.Background}" />
    </Style>

    <Style x:Key="xStyle.Stryker.Border.Content" TargetType="Border">
        <Setter Property="Padding"
                Value="16" />
        <Setter Property="BorderThickness"
                Value="1 0 1 1 " />
        <Setter Property="BorderBrush"
                Value="{DynamicResource xColor.Stryker.Border.BorderBrush}" />
        <Setter Property="Background"
                Value="{DynamicResource xColor.Stryker.Border.Content.Background}" />
        <Setter Property="CornerRadius"
                Value="0 0  2 2 " />
    </Style>
</ResourceDictionary>